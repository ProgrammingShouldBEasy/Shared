@model List<BlogPostWebsite.Models.PostViewModel>
@{
    ViewBag.Title = "Index";
}

<div class="jumbotron alert-info">
    <h1>Blogs..</h1>
    <p class="lead"></p>
</div>

<div class="row col-sm-12">
    <div class="col-sm-12">
        <hr />
        <h3>All Blogs</h3>
    </div>
</div>

<div class="row col-sm-12">
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <div class="post-info col-sm-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h4>@item.Post.Title</h4>
                    <small>@item.AuthorName | @item.Post.DatePosted.ToShortDateString()</small>
                </div>

                    <ul>
                        <li>@item.Post.Description</li>
                    </ul>


                @*
                    <label>@item.Post.Description</label>
                    @foreach (var c in item.Comments)
                    {
                    <label><b>Comment :</b> @c.CommentText  </label>
                    <label><b>CommentedBy :</b> @c.Name  </label>
                    }*@

            </div>
        }
    }
</div>